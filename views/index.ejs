<% include ./partials/header %>

<% var revBlogs = blogs.reverse(); %>

<% if(!user) { %>
   <div class="ui large header">Welcome To The Blog</div>
<% } else { %>
   <div class="ui large header">Welcome <%= user.username %></div>
<% } %>
   <div class="ui top attached">
      <div class="ui divided items">
         <% for(var i = 0; i < revBlogs.length; i++) { %>
            <div class="item">
               <div class="image">
                  <img src="<%= revBlogs[i].image %>">
               </div>
               <div class="content">
                  <a class="header" href="/<%= revBlogs[i]._id %>"><%= revBlogs[i].title %></a>
                  <div class="meta">
                     <span><%= revBlogs[i].created.toDateString() %></span>
                  </div>
                  <div class="description">
                  <% if(typeof revBlogs[i].post == "undefined") { %>
                     <p>no content</p>
                  <% } else { %>
                     <p><%- revBlogs[i].post.substring(0, 99) %></p>
                  <% } %>
                  </div>
                  <div class="extra">
                     <a class="ui floated violet button" href="/<%= revBlogs[i]._id %>">Read More</a> 
                  </div>
               </div>
            </div>
         <% } %>
      </div>
   </div>
</div>

<% include ./partials/footer %>